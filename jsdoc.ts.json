{ "source":
  { "include":        ["./src/"],
    "includePattern": ".+\\.(j|t)s?$"
  },

  "tags":
  { "allowUnknownTags": true,
    "dictionaries":     ["jsdoc","closure"]
  },
  
  "sourceType": "module",

  "plugins": 
  [ "node_modules/better-docs/typescript",
    "jsdoc-plugin-intersection",
    "plugins/markdown"
  ],
  
  "opts":
  { "Xtemplate":     "node_modules/@jood/jsdoc-theme",
    "NOPEtemplate": "node_modules/better-docs",
    "encoding":     "utf8",
    "destination":  "doc/jsdoc_ts",
    "recurse":      true,
    "private":      false
  },
  
  "templates": 
  { "default":
    { "layoutFile": "./jsdoc.tmpl"
    },
 
    "wljkowa":
    { "title": "@wljkowa/json",
      "footer": "Copyright Â© 2020 by Wolfgang L. J. Kowarschick, License <a href=\"https://opensource.org/licenses/MIT\">MIT</a>"  
    },
    
    "better-docs": 
    { "name": "@wljkowa/json",
        "Xlogo": "images/logo.png",
        "title": "", 
        "Xcss": "style.css",
        "hideGenerator": true,
        "navLinks": 
        [ { "label": "Wolfgang L.J. Kowarschick",
            "href": "https://kowa.hs-augsburg.de"
          }
        ]
    }
  }
}
  