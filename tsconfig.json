{ "compilerOptions": 
  { "moduleResolution":   "node",
    "target":             "ES2017",
    "declaration":        true,
    "sourceMap":          true,
    "esModuleInterop":    true,
    "strict":             true,
    "removeComments":     true,
    "lib":                ["es2020.string"],
    "downlevelIteration": true,
    "baseUrl":            "./",
    "paths":              { "~/*": [ "./src/*" ] }
  },

  "typedocOptions": 
  { "inputFiles": ["./transformer/index.js"],
    "mode": "file",
    "out":  "doc/typedoc"
  },

  "include": 
  [ "src/**/*",
    "test/**/*",
  ],

  "exclude": 
  [ "node_modules",
    "transformer",
    "transformer.commented"
  ]
}
