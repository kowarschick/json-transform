{ "tags":
    { "allowUnknownTags": true },
    
    "source":
    { "include":        ["./src/"],
      "includePattern": ".+\\.(j|t)s$",
      "excludePattern": ".+\\.map$"
    },

    "plugins": 
    [ "node_modules/better-docs/typescript"
    ],
    
    "opts":
    { "template":    "node_modules/ink-docstrap/template",
      "Xtemplate":   "node_modules/better-docs",
      "encoding":    "utf8",
      "destination": "doc/jsdoc",
      "recurse":     true,
      "private":     false
    },
    
    "templates": 
    { "systemName":        "@wljkowa/json",
      "footer":            "",
      "copyright":         "Copyright Â© 2020 by Wolfgang Kowarschick, License <a href=\"https://opensource.org/licenses/MIT\">MIT</a>",
      "navType":           "vertical",
      "theme":             "cosmo",
      "linenums":          true,
      "cleverLinks":       true,
      "monospaceLinks":    true,
      "collapseSymbols":   false,
      "inverseNav":        false,
      "outputSourceFiles": true,
      "outputSourcePath":  false,

      "better-docs": 
      { "name": "AdminBro Documentation",
          "Xlogo": "images/logo.png",
          "title": "", 
          "Xcss": "style.css",
          "hideGenerator": true,
          "navLinks": 
          [ { "label": "Wolfgang L.J. Kowarschick",
              "href": "https://kowa.hs-augsburg.de"
            }
          ]
      }
    }
  }
  