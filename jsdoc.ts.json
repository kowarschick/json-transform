{ "source":
  { "include":        ["./src/"],
    "includePattern": ".+\\.(j|t)s(doc)?$"
  },

  "tags":
  { "allowUnknownTags": true,
    "dictionaries":     ["jsdoc","closure"]
  },
  
  "sourceType": "module",

  "plugins": 
  [ "node_modules/better-docs/typescript",
    "jsdoc-plugin-intersection"
  ],
  
  "opts":
  { "template":    "node_modules/ink-docstrap/template",
    "Xtemplate":   "node_modules/better-docs",
    "encoding":    "utf8",
    "destination": "doc/jsdoc_ts",
    "recurse":     true,
    "private":     false
  },
  
  "templates": 
  { "systemName":        "@wljkowa/json",
    "footer":            "",
    "copyright":         "Copyright Â© 2020 by Wolfgang L. J. Kowarschick, License <a href=\"https://opensource.org/licenses/MIT\">MIT</a>",
    "navType":           "horizontal",
    "theme":             "cosmo",
    "linenums":          false,
    "cleverLinks":       true,
    "monospaceLinks":    false,
    "collapseSymbols":   false,
    "inverseNav":        false,
    "outputSourceFiles": true,
    "outputSourcePath":  false,

    "better-docs": 
    { "name": "@wljkowa/json",
        "Xlogo": "images/logo.png",
        "title": "", 
        "Xcss": "style.css",
        "hideGenerator": true,
        "navLinks": 
        [ { "label": "Wolfgang L.J. Kowarschick",
            "href": "https://kowa.hs-augsburg.de"
          }
        ]
    }
  }
}
  