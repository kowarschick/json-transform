{ "tags":
    { "allowUnknownTags": true },
    
    "source":
    { "include":        ["./transformer.commented/"],
      "includePattern": ".+\\.js$",
      "excludePattern": ".+\\.(ts|map)$"
    },
    
    "plugins":
    [ ],
    
    "templates":
    { "systemName":        "@wljkowa/json",
      "footer":            "",
      "copyright":         "Copyright Â© 2020 by Wolfgang Kowarschick, License <a href=\"https://opensource.org/licenses/MIT\">MIT</a>",
      "navType":           "vertical",
      "theme":             "cosmo",
      "linenums":          true,
      "cleverLinks":       true,
      "monospaceLinks":    true,
      "collapseSymbols":   false,
      "inverseNav":        false,
      "outputSourceFiles": true,
      "outputSourcePath":  false
    },
    
    "opts":
    { "template":    "node_modules/ink-docstrap/template",
      "encoding":    "utf8",
      "destination": "doc/jsdoc",
      "recurse":     true,
      "private":     false
    }
  }
  